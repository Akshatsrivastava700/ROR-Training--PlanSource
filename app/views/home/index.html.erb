<%= form_for :post, :url => { :action => "create", :controller => 'blogs' }  do |f| %>
        <%= f.text_field :email, :placeholder => 'Email' %><br />
        <%=f.text_field :title, :placeholder => ' Title ' %><br />
        <%= f.text_area :content, :placeholder => ' Content ' %><br />
        <%= f.text_field :user_id, :type => 'hidden', :vlaue => 0 %><br />
        <%= f.submit "Add Question"%><br />
<% end %>

<% @blogs.each do |blog| %>
<div>
  <h4>Title</h4><br />
  <%= blog.title %><br />
  <h4>Description</h4><br />
  <%= blog.content %><br />
</div>
<% end %>
